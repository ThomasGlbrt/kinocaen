{% extends 'base.html.twig' %}
{% block title %}Modification du profil {% endblock %}

{% block contenu %}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="{{ form.nom.vars.id }}">Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label for="{{ form.prenom.vars.id }}">Prénom</label>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="{{ form.numTel.vars.id }}">Numéro de téléphone</label>
                    {{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label for="{{ form.Utilisateurs.vars.id }}">Email</label>
                    {{ form_widget(form.Utilisateurs.email, {'attr': {'class': 'form-control'}}) }}     
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="{{ form.poste.vars.id }}">Poste</label>
                    {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    <label for="{{ form.Talent.vars.id }}">Talent</label>
                    {{ form_widget(form.Talent, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="{{ form.ChosePlus.vars.id }}">Chose plus</label>
                {{ form_widget(form.ChosePlus, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Métiers</label>
                {% for metier in form.metier %}
                    <div class="form-check">
                        {{ form_widget(metier, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ metier.vars.id }}">
                            {{ metier.vars.label }}
                        </label>
                    </div>
            {% endfor %}
        </div>
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        <br>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
    <div class="col-md-4">
    </div>
</div>
{% endblock %}