{% extends 'base.html.twig' %}
{% block title %}Liste du Matériel{% endblock %}
{% block style %}
.card-columns {
  @include media-breakpoint-only(lg) {
    column-count: 4;
  }
  @include media-breakpoint-only(xl) {
    column-count: 4;
  }
}
{% endblock %}
{% block contenu %}

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>


	LISTE DU MATERIELS</br>
	<div class="card-deck">
		{% for e in pMateriels %}
		<div class="card ">
    		<div class="card-body">
      			<h5 class="card-title"><a href="{{ path('materielConsulter', { 'id': e.id }) }}">{{ e.intitule }}</a></h5>
			{% if e.description != '' %}
			<div class="card-text">
				{{ e.description }}
			</div>
			{% else %}{% endif %}
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
			Launch demo modal
			<div id="modal-container">
				{% include 'materiel/consulter.html.twig' %}
			</div>
			</button>
			</div>
		</div>
	{% else %}
	
		<div>Aucun materiel n'a été trouvé.</div>
	{% endfor %}
	</div>





{% endblock %}	 


