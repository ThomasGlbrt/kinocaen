{# Fichier templates/matériel/ajouter.html.twig #}

{% extends 'base.html.twig' %}

{# Définition du titre de la page #}
{% block title %}Ajouter un matériel{% endblock %}

{# Définition du contenu de la page #}
{% block contenu %}
    <h4>Ajouter un matériel</h4>
    </br>
    {# Formulaire pour ajouter un matériel #}
    {{ form_start(form) }}

    {# Champ intitulé du matériel #}
    <div class="col-sm-6 mb-3 mb-sm-0">
        {{ form_widget(form.intitule, {'attr': {'class': 'form-control', 'placeholder': 'Intitulé'}}) }}
    </div></br>

    {# Champ description du matériel #}
    <div class="col-sm-6 mb-3 mb-sm-0">
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
    </div></br>

    {# Champ catégorie du matériel #}
    <div class="col-sm-6 mb-3 mb-sm-0">
        {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'placeholder': 'Catégorie'}}) }}
    </div></br>

    {# Bouton pour soumettre le formulaire #}
    <a href="{{ path('materielLister') }}" class="btn btn-primary">Retour</a>
    <button type="submit" class="btn btn-primary">Enregistrer</button>

    {{ form_end(form) }}
{% endblock %}
